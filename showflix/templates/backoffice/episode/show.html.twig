{% extends 'backoffice/layout.html.twig' %}

{% block title %}Episode{% endblock %}

{% block content %}
    <h1>Episode</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ episode.id }}</td>
            </tr>
            <tr>
                <th>Numéro de l'épisode</th>
                <td>{{ episode.episodeNumber }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ episode.title }}</td>
            </tr>
            <tr>
                <th>Date de publication</th>
                <td>{{ episode.publishedAt ? episode.publishedAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ episode.createdAt ? episode.createdAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Dernière mise à jour</th>
                <td>{{ episode.updatedAt ? episode.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('backoffice_episode_index') }}">Retour à la liste</a>

    <a class="btn btn-success" href="{{ path('backoffice_episode_edit', {'id': episode.id}) }}">Editer</a>

    {{ include('backoffice/episode/_delete_form.html.twig') }}
{% endblock %}
