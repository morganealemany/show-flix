{% extends 'backoffice/layout.html.twig' %}

{% block content %}

<h1>Editer la catégorie {{ category.name }}</h1>

{{ form_start(formView) }}
    {{ form_row(formView.name) }}
    <p><button class="btn btn-success">Valider</button></p>
{{ form_end(formView) }}

<p><a class="btn btn-danger" href="{{ path('backoffice_category_delete', {id: category.id}) }}" onclick="return confirm('Êtes vous sûr de vouloir supprimer cet élément?');">Supprimer</a></p>

<p><a class="btn btn-primary" href="{{ path('backoffice_category_index') }}">Revenir à la liste</a></p>


{% endblock %}