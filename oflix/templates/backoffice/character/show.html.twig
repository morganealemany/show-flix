{% extends 'backoffice/layout.html.twig' %}

{% block content %}

<h1>{{ character.firstname }} {{ character.lastname}}</h1>

    <h3>Age</h3>
        <p>{{ character.age }}</p>
    <h3>Genre</h3>
        <p>{{ character.gender }}</p>
    <h3>Biographie</h3>
        <p>{{ character.bio }}</p>

<p>
    <a class="btn btn-success" href="{{ path('backoffice_character_edit', {id: character.id})}}">Editer</a>
</p>
<p>
    <a class="btn btn-danger" href="{{ path('backoffice_character_delete', {id: character.id})}}" onclick="return confirm('Êtes vous sûr de vouloir supprimer cet élément?');">Supprimer</a>
</p>
<p>
    <a class="btn btn-primary" href="{{ path('backoffice_character_index') }}">Retour à la liste</a>
 </p>

{% endblock %}