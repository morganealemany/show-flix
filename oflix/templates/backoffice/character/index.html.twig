{% extends 'backoffice/layout.html.twig' %}

{% block title %}Index personnages - {{ parent() }}{% endblock %}

{% block content %}

<main style="margin:100px">
<h1>Liste des personnages</h1>

    <a class="btn btn-primary" href="{{ path('backoffice_character_add') }}">Ajouter un personnage</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Genre</th>
                <th>Age</th>
                <th>Biographie</th>
                <th>Date de création</th>
                <th>Dernière mise à jour</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for character in characters %}
            <tr>
                <td>{{ character.id }}</td>
                <td>{{ character.firstname }}</td>
                <td>{{ character.lastname }}</td>
                <td>{{ character.gender }}</td>
                <td>{{ character.age }}</td>
                <td>{{ character.bio }}</td>
                <td>{{ character.createdAt ? character.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ character.updatedAt ? character.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('backoffice_character_show', {'id': character.id}) }}">Voir</a>
                    <a href="{{ path('backoffice_character_edit', {'id': character.id}) }}">Editer</a>
                    <a href="{{ path('backoffice_character_delete', {'id': character.id}) }}">Supprimer</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</main>
{% endblock %}
