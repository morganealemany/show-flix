{% extends 'backoffice/layout.html.twig' %}

{% block title %}TvShow{% endblock %}

{% block content %}
<img src="{{ asset('uploads/' ~ tv_show.image)}}" width= 500 alt="Image de la série {{ tv_show.title }}">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tv_show.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ tv_show.title }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ tv_show.synopsis }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ tv_show.image }}</td>
            </tr>
            <tr>
                <th>NbLikes</th>
                <td>{{ tv_show.nbLikes }}</td>
            </tr>
            <tr>
                <th>Date de publication</th>
                <td>{{ tv_show.publishedAt ? tv_show.publishedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ tv_show.createdAt ? tv_show.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Dernière mise à jour</th>
                <td>{{ tv_show.updatedAt ? tv_show.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>


    <p><a class="btn btn-success" href="{{ path('backoffice_tv_show_edit', {'id': tv_show.id}) }}">Mettre à jour</a></p>

    <p>{{ include('backoffice/tv_show/_delete_form.html.twig') }}</p>

    <p><a class="btn btn-primary" href="{{ path('backoffice_tv_show_index') }}">Revenir à la liste</a></p>
{% endblock %}
