{% extends "base.html.twig" %}

{% block title %}
    {{ tvshow.title }} - {{ parent()}}
{% endblock %}

{% block body %}

<main>

        <section class="py-5 text-center container">
            <div class="row py-lg-5">
                <div class="col-lg-6 col-md-8 mx-auto">
                    <h1 class="fw-light">{{ tvshow.title }}</h1>
                    <img src="{{ tvshow.image }}" alt="" height="400">
                    <p class="lead text-muted">
                        {% for season in tvshow.seasons %}
                        <a href="#"><span class="badge bg-secondary">Saison {{ season.season_number }}</span></a>
                        {% endfor %}
                    </p>
                    <p class="lead text-muted">
                        Avec : 
                        {% for character in tvshow.characters %}
                            <a href="#">{{ character.firstname }} {{ character.lastname }}</a>, 
                        {% endfor %}
                    </p>
                </div>
            </div>
        </section>

        <div class="py-5 bg-light">
            <div class="container">
                <p>
                    {{ tvshow.synopsis }}
                </p>
            </div>
        </div>

    </main>






{% endblock %}